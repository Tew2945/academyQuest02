<div id="todo_<%= todo.id %>" class="flex flex-row justify-between items-center bg-white p-4 rounded-lg shadow-sm" data-testid="todo-item">
  <div class="flex items-center flex-1">
    <!-- Checkbox for toggling status -->
    <%= form_with(model: todo, local: false, class: "contents") do |form| %>
      <%= form.check_box :status, 
          class: "h-5 w-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer",
          onchange: "this.form.requestSubmit()",
          "data-testid": "todo-checkbox" %>
    <% end %>
    <!-- Todo content -->
    <span class="<%= todo.status? ? 'line-through text-gray-500' : 'text-gray-900' %> transition-all duration-200 text-lg font-medium ml-4" data-testid="todo-name">
      <%= todo.name %>
    </span>
  </div>
  <div>
    <%= button_to "Delete", todo, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure you want to delete this quest?", testid: "delete-todo-btn" } %>
  </div>
</div>