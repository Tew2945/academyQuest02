<% content_for :title, "Todos" %>

<div class="w-full">
  <div class="flex flex-col sm:flex-row items-center sm:items-start space-y-3 sm:space-y-0 sm:space-x-4 mb-8">
    <div>
      <%= image_tag "IMG_1451.JPG",
        class: "w-20 h-20 sm:w-16 sm:h-16 rounded-lg object-cover object-center mx-auto aspect-square" %>
    </div>
    <div class="text-center sm:text-left">
      <h2 class="text-xl font-semibold">Teeratorn Thiengtham <span class="text-gray-500">(Tew)</span></h2>
      <p class="text-gray-600">This website is my personal quest tracker for the ODTS Academy. Here you can see my progress, add new quests, and brag about my achievements!</p>
    </div>
      <div class="flex gap-4 mt-8">
    <%= link_to "My Brags", brags_path, class: "bg-blue-700 hover:bg-blue-800 text-white font-semibold py-2 px-6 rounded-lg transition" %>
  </div>
  </div>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Tew's Todos</h1>
  </div>

  <!-- Quick Add Form -->
  <div class="mb-6 bg-gray-50 p-4 rounded-lg">
    <%= form_with(model: Todo.new, local: false, class: "flex gap-3", html: { "data-testid": "todo-form" }) do |form| %>
      <div class="flex-1">
        <%= form.text_field :name, 
            placeholder: "Add a new todos...", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            "data-testid": "todo-input",
            required: true %>
      </div>
      <%= form.submit "Add Todo", 
          class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors cursor-pointer",
          "data-testid": "add-todo-btn" %>
    <% end %>
  </div>

  <div id="todos" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @todos.any? %>
      <%= render partial: "todo_item", collection: @todos , as: :todo%>
    <% else %>
      <div class="text-center my-10 p-8 bg-gray-50 rounded-lg">
        <p class="text-gray-500 text-lg">No todos found.</p>
        <p class="text-gray-400 text-sm mt-2">Start your ODTS Academy journey by adding your first todo!</p>
      </div>
    <% end %>
  </div>


</div>