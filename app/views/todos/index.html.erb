<% content_for :title, "Todos" %>

<div class="w-full">
  <div class="flex items-center space-x-4 mb-8">
    <div>
      <%= image_tag "IMG_1451.JPG", class: "h-16 w-16 rounded-lg object-cover" %>
    </div>
    <div>
      <h2 class="text-xl font-semibold">Teeratorn Thiengtham <span class="text-gray-500">(Tew)</span></h2>
      <p class="text-gray-600">This website is my personal quest tracker for the ODTS Academy. Here you can see my progress, add new quests, and brag about my achievements!</p>
    </div>
  </div>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Todos</h1>
    <%= link_to "New todo", new_todo_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <!-- Quick Add Form -->
  <div class="mb-6 bg-gray-50 p-4 rounded-lg">
    <%= form_with(model: Todo.new, local: false, class: "flex gap-3") do |form| %>
      <div class="flex-1">
        <%= form.text_field :name, 
            placeholder: "Add a new quest...", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <%= form.submit "Add Quest", 
          class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors cursor-pointer" %>
    <% end %>
  </div>

  <div id="todos" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @todos.any? %>
      <% @todos.each do |todo| %>
        <div id="todo_<%= todo.id %>" class="flex flex-col sm:flex-row justify-between items-start sm:items-center pb-5 sm:pb-0 bg-white p-4 rounded-lg shadow-sm border">
          <div class="flex items-center space-x-3 flex-1">
            <!-- Checkbox for toggling status -->
            <%= form_with(model: todo, local: false, class: "contents") do |form| %>
              <%= form.check_box :status, 
                  class: "h-5 w-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer",
                  onchange: "this.form.requestSubmit()" %>
            <% end %>
            
            <!-- Todo content -->
            <div class="flex-1">
              <span class="<%= todo.status? ? 'line-through text-gray-500' : 'text-gray-900' %> transition-all duration-200 text-lg font-medium">
                <%= todo.name %>
              </span>
              <div class="text-sm text-gray-500 mt-1">
                <% if todo.status? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    âœ“ Completed
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    ðŸ”„ In Progress
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2 mt-3 sm:mt-0">
            <%= link_to "Edit", edit_todo_path(todo), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 text-blue-600 border border-blue-600 hover:bg-blue-50 font-medium" %>
            <%= button_to "Destroy", todo, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure you want to delete this quest?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center my-10 p-8 bg-gray-50 rounded-lg">
        <p class="text-gray-500 text-lg">No quests found.</p>
        <p class="text-gray-400 text-sm mt-2">Start your ODTS Academy journey by adding your first quest!</p>
      </div>
    <% end %>
  </div>


  <div class="flex gap-4 mt-8">
    <%= link_to "My Brags", brags_path, class: "bg-blue-700 hover:bg-blue-800 text-white font-semibold py-2 px-6 rounded-lg transition" %>
  </div>
</div>