<div class="bg-white rounded-2xl shadow-lg p-8 flex flex-col md:flex-row items-center gap-8 max-w-4xl mx-auto border border-gray-100">
  <!-- Profile Image -->
  <div>
    <%= image_tag image_url, alt: "#{name} profile", class: "rounded-full w-40 h-40 object-cover border-4 border-white shadow-md" %>
  </div>
  <!-- Info Section -->
  <div class="flex-1 w-full">
    <h2 class="text-3xl font-extrabold mb-1 text-gray-900"><%= name %> <span class="font-normal text-gray-700">(<%= nickname %>)</span></h2>
    <div class="text-gray-500 mb-1">@ Odds</div>
    <p class="text-gray-700 mb-4"><%= desc %></p>
    <div class="flex gap-4">
      <%= link_to "My Brags", "#", class: "bg-blue-700 hover:bg-blue-800 text-white font-semibold py-2 px-6 rounded-lg transition" %>
    </div>
  </div>
</div>